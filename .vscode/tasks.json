{
  "version": "2.0.0",
  "tasks": [
    // ------------------------------------------------------------------------
    // Temporal Service
    // ------------------------------------------------------------------------
    {
      "label": "docker compose: temporal-service up",
      "type": "shell",
      "problemMatcher": [],
      "windows": {
        "command": "C:/Program Files/Git/bin/bash.exe",
        "args": [
          "-c",
          "docker compose --file ./quickstart-guides/temporal/compose.yml up"
        ]
      },
      "linux": {
        "command": "docker compose",
        "args": [
          "--file",
          "${workspaceFolder}/quickstart-guides/temporal/compose.yml",
          "up"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "icon": {
        "id": "play-circle",
        "color": "terminal.ansiMagenta"
      }
    },
    // ------------------------------------------------------------------------
    // SQLite3 - Example 2 Customers Database
    // ------------------------------------------------------------------------
    {
      "label": "sqlite3: open temporal example2 customers database",
      "type": "shell",
      "problemMatcher": [],
      "windows": {
        "command": "C:/Program Files/Git/bin/bash.exe",
        "args": [
          "-c",
          "sqlite3 -header -column ./detailed-guides/temporal/examples/example-2/Example2.Worker/customers.db"
        ]
      },
      "linux": {
        "command": "sqlite3",
        "args": [
          "-header",
          "-column",
          "${workspaceFolder}/detailed-guides/temporal/examples/example-2/Example2.Worker/customers.db"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "icon": {
        "id": "database",
        "color": "terminal.ansiMagenta"
      }
    },
  ]
}